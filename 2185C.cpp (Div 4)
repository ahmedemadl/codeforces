#include <bits/stdc++.h>
using namespace std;
#define ll long long

int main(){
    cin.tie(0)->sync_with_stdio(0);
    int t; cin >> t;
    while(t--){
        int n; cin >> n;

        vector<int> arr;
        set<int> myst;
        for(int i = 0 ;i  < n;i++){
            int num;cin >> num;
            if(myst.count(num)){
                continue;
            }
            arr.push_back(num);
            myst.insert(num);
            
        }
        sort(arr.begin(), arr.end());
        int st=1, maxi=0;
        for(int i = 1 ;i < arr.size();i++){
            if(arr[i] == arr[i-1]+1){
                st++;
            }else{
                maxi = max(st,maxi);
                st=1;
            }
        }
        maxi = max(maxi, st);
        cout << maxi << '\n';
    }
    return 0;
}
