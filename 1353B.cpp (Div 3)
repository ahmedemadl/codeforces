// Problem Name: N - Two Arrays And Swaps
// Learned     : 
//=====================================================
#include <bits/stdc++.h>
using namespace std;
#define ll long long

int main(){
    cin.tie(0)->sync_with_stdio(0);
    int t;cin>>t;
    while(t--){
        int n,k;cin >> n >> k;
        vector <int> a(n),b(n);
        for(int i  = 0 ; i< n; i++){
            cin >> a[i];
        }
        for(int i  = 0 ; i< n; i++){
            cin >> b[i];
        }
        sort(a.begin(),a.end());
        sort(b.rbegin(),b.rend());
        ll sum=0;
        for(int i = 0 ; i < n ; i++){
            if(k>0){
                k--;
                sum+= max(a[i],b[i]);
            }
            else{
                sum+= a[i];
            }
        }
        
        cout << sum << endl;
    }
    return 0;
}
