    #include <bits/stdc++.h>
    using namespace std;
    #define ll long long
     
    int main(){
        cin.tie(0)->sync_with_stdio(0);
        int t; cin >>t;
        while(t--){
            int n; cin >> n;
            ll count =0;
            ll ones =0;
            for(int i = 0 ; i < n; i++){
                int num; cin >> num;
                if(num == 0){
                    count ++;
                }else if( num == -1){
                    ones ++;
                }
            }
            if( ones % 2 != 0){
                count+=2;
            }
            cout << count << '\n';
        }
     
        return 0;
    }
