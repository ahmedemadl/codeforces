int v[1000000];

int main()
{
    int t; cin >> t;
    while (t--) {
        int n, x, sum = 0, steps = 0;
        cin >> n;

        for (int i = 1; i <= n; i++) {
            cin >> x;

            v[i] = 0;

            while (x % 2 == 0) {
                x /= 2;
                sum++;
            }

            int j = i;

            while (j % 2 == 0) {
                j /= 2;
                v[i]++;
            }
        }

    sort(v + 1, v + n + 1);

    for (int i = n; i >= 1 && sum < n; i--) {
        sum += v[i];
        steps++;
    }

    if (sum < n) cout << -1 << endl;
    else cout << steps << endl;

    }
}
