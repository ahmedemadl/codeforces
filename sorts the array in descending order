#include <iostream>
#include <algorithm> // For std::sort
#include <functional> // For std::greater

using namespace std; // Use the standard namespace

int main() {
    int n; // Variable to store the length of the array

    // Read the length of the array from the user
    cout << "Enter the length of the array: ";
    cin >> n;

    // Dynamically allocate the array
    int* arr = new int[n];

    // Read the elements of the array from the user
    cout << "Enter the elements of the array: ";
    for (int i = 0; i < n; ++i) {
        cin >> arr[i];
    }

    // Sort the array in descending order using std::sort with std::greater
    sort(arr, arr + n, greater<int>());

    // Print the sorted array
    cout << "Sorted array (largest to smallest): ";
    for (int i = 0; i < n; ++i) {
        cout << arr[i] << " ";
    }
    cout << endl;

    // Deallocate the memory used for the array
    delete[] arr;

    return 0;
}
