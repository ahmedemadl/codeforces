#include <bits/stdc++.h>
using namespace std;
#define ll long long

int main(){
    cin.tie(0)->sync_with_stdio(0);
    int t; cin >> t;
    while(t--){
        int n; cin >> n;
        int arr[n];
        ll sum=0;
        ll mx = 0 , pos;
        for(int i = 0 ; i< n;i++){
            cin >> arr[i];
            sum += arr[i];
            if(arr[i] > mx){
                mx=arr[i];
                pos = i;
            }
        }
        auto can = [&](ll x){
            double average= ((double)sum + (double)x)/(double)n /2.0;
            ll count=0;
            for(int i = 0 ;i < n;i++){
                if(average > arr[i] && i != pos)count++;
            }
            return count > n/2;
        };
        ll l =0, r=1e18,mid, ans=-1;
        while(l <= r){
            mid = l + (r-l)/2;
            if(can(mid)){
                ans=mid;
                r=mid-1;
            }else{
                l = mid+1;
            }
        }
        cout << ans << '\n';
    }
    return 0;
}
