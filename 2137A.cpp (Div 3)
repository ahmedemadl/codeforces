#include <bits/stdc++.h>
using namespace std;
#define ll long long

int main(){
    cin.tie(0)->sync_with_stdio(0);
    int n; cin >> n;
    while(n--){
        ll x, k ; cin >> k >> x;
        while(k--){
            x*= 2;
        }
        cout << x << '\n';
    }

    return 0;
}
