#include <bits/stdc++.h>
using namespace std;
#define ll long long

int main(){
    cin.tie(0)->sync_with_stdio(0);
    int t; cin >> t;
    while(t--){
        int n;cin >> n;
        int maxi =0;
        for(int i = 0 ; i < n; i++){
            int num;cin >> num;
            maxi = max(maxi, num);
        }
        cout << n* maxi << '\n' ;

    }
    return 0;
}
